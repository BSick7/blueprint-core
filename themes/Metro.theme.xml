<ResourceDictionary
        xmlns="http://schemas.wsick.com/fayde"
        xmlns:x="http://schemas.wsick.com/fayde/x"
        xmlns:blueprint="http://schemas.wsick.com/blueprint">
    <Style TargetType="blueprint:Container">
        <Setter Property="ItemsPanelTemplate">
            <Setter.Value>
                <Canvas />
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="blueprint:Resource">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="blueprint:Resource">
                    <Image Source="{TemplateBinding ImageSource}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>